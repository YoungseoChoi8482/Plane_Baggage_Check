<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Where">

    <android.widget.Button
        android:id="@+id/domestic_button"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:contentDescription="Submit button"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/international_button"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:contentDescription="Submit button"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/domestic_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/international"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:elevation="2dp"
        android:text="국제선"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/international_button"
        app:layout_constraintEnd_toEndOf="@+id/international_button"
        app:layout_constraintStart_toStartOf="@+id/international_button"
        app:layout_constraintTop_toTopOf="@+id/international_button"
        app:layout_constraintVertical_bias="0.097" />

    <TextView
        android:id="@+id/domestic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:text="국내선"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/domestic_button"
        app:layout_constraintEnd_toEndOf="@+id/domestic_button"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/domestic_button"
        app:layout_constraintTop_toTopOf="@+id/domestic_button"
        app:layout_constraintVertical_bias="0.097" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:elevation="2dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/domestic_button"
        app:layout_constraintEnd_toEndOf="@+id/domestic_button"
        app:layout_constraintStart_toStartOf="@+id/domestic_button"
        app:layout_constraintTop_toTopOf="@+id/domestic_button"
        app:layout_constraintVertical_bias="0.483"
        app:srcCompat="@drawable/south_korea_162427_1280" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="111dp"
        android:layout_height="205dp"
        android:layout_marginTop="80dp"
        android:elevation="2dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/international_button"
        app:layout_constraintEnd_toEndOf="@+id/international_button"
        app:layout_constraintStart_toStartOf="@+id/international_button"
        app:layout_constraintTop_toTopOf="@+id/international_button"
        app:srcCompat="@drawable/globe" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어디로 가시나요?"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />
</androidx.constraintlayout.widget.ConstraintLayout>